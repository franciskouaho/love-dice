rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ðŸ”¥ RÃˆGLES SIMPLIFIÃ‰ES QUI FONCTIONNENT
    
    // Collection des utilisateurs (ancien systÃ¨me)
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // Sous-collections
      match /history/{historyId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      match /faces/{faceId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    // ðŸ”¥ Collection user_settings (nouveau systÃ¨me) - SIMPLIFIÃ‰
    match /user_settings/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Collections publiques/admin
    match /defaultFaces/{faceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /remoteConfig/{configId} {
      allow read: if true;
      allow write: if false;
    }

    match /stats/{statId} {
      allow read: if true;
      allow write: if false;
    }

    // Bloquer tout le reste
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
